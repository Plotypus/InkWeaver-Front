{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "module": "es2016",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "_out",
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2016",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules/*", "**/*-aot.ts"]
}
